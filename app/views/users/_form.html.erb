<%= render 'shared/errors', obj: @user %>

<div class="row">
    <div class="form-custom">
        <%= form_for(@user, :html => {class: "form-horizontal", role: "form"}) do |f| %>
            <div class="form-group">
                <div class="control-label col-sm-2 col-xs-12">
                    <%= f.label :username %>
                </div>
                <div class="col-sm-10 col-xs-12">
                    <%= f.text_field :username, class: "form-control", placeholder: "Enter username", autofocus: true %>
                </div>
            </div>


            <div class="form-group">
                <div class="control-label col-sm-2 col-xs-12">
                    <%= f.label :email %>
                </div>
                <div class="col-sm-10 col-xs-12">
                    <%= f.email_field :email, class: "form-control", placeholder: "Enter email", autofocus: true %>
                </div>
            </div>
            <div class="form-group">
                <div class="control-label col-sm-2 col-xs-12">
                    <%= f.label :password %>
                </div>
                <div class="col-sm-10 col-xs-12">
                    <%= f.password_field :password, class: "form-control", placeholder: "Enter password", autofocus: true %>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <%= f.submit(@user.new_record? ? "Signup" : "Update account", class: 'btn btn-primary btn-lg') %>
                    <%= link_to "Cancel", :back, class: "btn btn-primary btn-lg" %>
                </div>
            </div>
        <% end %>
    </div>
</div>
