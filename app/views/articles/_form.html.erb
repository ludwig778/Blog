<%= render 'shared/errors', obj: @article %>

<div class="row">
    <div class="form-custom">

        <%= simple_form_for(@article, :html => {class: "form-horizontal", role: "form"}) do |f| %>
            <div class="form-group">
                <div class="control-label col-md-2 col-xs-12">
                    <%= f.label :title %>
                </div>
                <div class="col-md-10 col-xs-12">
                    <%= f.text_field :title, class: "form-control", placeholder: "Title of article", autofocus: true %>
                </div>
            </div>

            <div class="form-group summernote-container">
                <div class="control-label col-md-2 col-xs-12">
                  <%= f.label :description %>

                </div>
                <div class="col-md-10 col-xs-12">
                    <%= f.text_area :description, class: "form-control", id: "summernote", placeholder: "Title of article", autofocus: true %>
                </div>
            </div>

            <script>
              $(document).ready(function() {
                $('#summernote').summernote();
              });
            </script>


            <div class="form-group">
                <div class="control-label col-md-2 col-xs-12">
                    <%= f.label :category %>
                </div>
                <div class="col-sm-6">
                    <%= f.select :category_ids, Category.all.collect {|p| [p.name, p.id]}, {}, {id: "select-enabled", class: "form-control", multiple: true} %>
                </div>
            </div>
            <%= javascript_include_tag "select-enabled.js" %>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <%= f.submit class: 'btn btn-primary btn-lg' %> <%= link_to "Cancel", :back, class: "btn btn-primary btn-lg" %>
                </div>
            </div>
        <% end %>
      </div>
</div>
